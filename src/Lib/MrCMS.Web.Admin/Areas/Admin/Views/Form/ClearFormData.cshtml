@model MrCMS.Entities.Documents.Web.Form
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@using (Html.BeginForm("ClearFormData", "Form", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Admin Form Delete Entries Title", "Delete All Entries")
            </h5>
            <button type="submit" class="btn btn-danger">
                <i class="icon ti ti-trash"></i>
                @await Html.Resource("Delete")
            </button>
        </div>
        <div class="modal-body">
            @Html.InfoBlock(await Html.Resource("Heads up") + "!", await Html.Resource("Admin Form Delete Entries Warning", "Deleting entries cannot be undone, do you want to proceed?"), AlertType.danger)
        </div>
    </div>
}