@using System.Linq
@model System.Collections.Generic.List<MrCMS.Models.SortItem>
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }

<form asp-controller="Form" asp-action="Sort" class="form-update-form" data-form-sort-form id="sort-fields-form">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Admin Form Sort Fields", "Sort fields")
            </h5>
            <button type="submit" class="btn btn-primary" id="submit">
                <i class="icon ti ti-device-floppy"></i>
                @await Html.Resource("Save")
            </button>
        </div>
        <div class="modal-body">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    @await Html.Resource("Admin Form No form fields", "No form field").
                </div>
            }
            else
            {
                <ul data-sortable class="list-group">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item cursor-grab bg-white">
                            <div class="row align-items-center">
                                <div class="col text-truncate">
                                    @Html.HiddenFor(model => model[i].Id)
                                    @Html.HiddenFor(model => model[i].Order)
                                    <div class="text-reset d-block">@Model[i].Name</div>
                                </div>
                                <div class="col-auto">
                                    <span class="list-group-item-actions">
                                        <i class="icon ti ti-drag-drop-2"></i>
                                    </span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</form>