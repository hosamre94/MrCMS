@model MrCMS.Web.Admin.Models.UpdateMediaCategoryModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
    ViewBag.Title = "Edit | " + Model.Name;
}

<form asp-controller="MediaCategory" asp-action="Edit" asp-route-id="@Model.Id" method="post" id="edit-media", target="_top">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("admin-edit", "Edit") @Model.Name
            </h5>
            <button type="submit" class="btn btn-primary">
                <i class="icon ti ti-device-floppy"></i>
                @await Html.Resource("Save")
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsGallery" type="checkbox" class="form-check-input"/>
                    <label asp-for="IsGallery" class="form-check-label"></label>
                </div>
                <span asp-validation-for="IsGallery"></span>
            </div>
        </div>
    </div>
</form>