@using MrCMS.Entities.Documents.Media
@model MrCMS.Web.Admin.Models.MediaCategorySearchModel
@{
    var category = ViewData["category"] as MediaCategory;
    ViewBag.Title = category.Name;
}
<div data-media-category>
    <admin-header>
        <row>
            <admin-header-title title="@category.Name"/>

            <admin-header-actions>
                <a href="@Url.Action("SortFiles", "MediaCategory", new { id = Model.Id })" class="btn btn-icon btn-dark" data-bs-toggle="tooltip" title="@await Html.Resource("Admin Media Sort Button", "Sort Files")" data-bs-placement="bottom" data-toggle="fb-modal">
                    <i class="icon ti ti-sort-descending-2"></i>
                </a>
                <a href="@Url.Action("Edit", "MediaCategory", new { id = Model.Id })" class="btn btn-icon btn-primary" data-bs-toggle="tooltip" title="@await Html.Resource("Admin Media Edit Folder Button", "Edit Folder")" data-bs-placement="bottom" data-toggle="fb-modal">
                    <i class="icon ti ti-edit"></i>
                </a>
                <a href="@Url.Action("Add", "MediaCategory", new { id = Model.Id })" class="btn btn-primary" data-toggle="fb-modal">
                    <i class="icon ti ti-folder-plus"></i> @await Html.Resource("Admin Media New Folder Button", "New Folder")
                </a>
            </admin-header-actions>
        </row>
    </admin-header>

    @Html.Hidden("FolderId", Model.Id)
    <partial name="Manage" model="Model"/>

</div>