@using MrCMS.Entities.Documents.Media
@model MrCMS.Web.Admin.Models.AddMediaCategoryModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
    var parent = ViewData["parent"] as MediaCategory;
}

<form asp-controller="MediaCategory" asp-action="Add" method="post" id="add-media-category">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("admin-add", "Add")
            </h5>
            <button type="submit" class="btn btn-primary">
                <i class="icon ti ti-device-floppy"></i>
                @await Html.Resource("Save")
            </button>
        </div>
        <div class="modal-body">
            <input type="hidden" asp-for="ParentId"/>
            @Html.Hidden("ParentUrl", parent?.Path)
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlSegment"></label>
                <input type="text" asp-for="UrlSegment" class="form-control"/>
                <span asp-validation-for="UrlSegment"></span>
            </div>
        </div>
    </div>

</form>