@using System.Drawing
@model System.Collections.Generic.List<MrCMS.Models.ImageSortItem>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}
<form method="post" id="sort-media-category">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("admin-sort-file", "Sort Files")
            </h5>
            <button type="submit" class="btn btn-primary">
                <i class="icon ti ti-device-floppy"></i>
                @await Html.Resource("Save")
            </button>
        </div>
        <div class="modal-body">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    @await Html.Resource("admin-no-files-to-sort", "There are no files to sort.")
                </div>
            }
            else
            {
                <ul data-sortable class="list-group">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item cursor-grab bg-white">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    @Html.HiddenFor(model => model[i].Id)
                                    @Html.HiddenFor(model => model[i].Order)
                                    @if (Model[i].IsImage)
                                    {
                                        @await Html.RenderImage(Model[i].ImageUrl, new Size(150, 150), attributes: new { @class = "avatar" })
                                    }
                                </div>
                                <div class="col text-truncate">
                                    <div class="text-reset d-block">@Model[i].Name</div>
                                </div>
                                <div class="col-auto">
                                    <span class="list-group-item-actions">
                                        <i class="icon ti ti-drag-drop-2"></i>
                                    </span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</form>