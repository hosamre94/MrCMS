@model MrCMS.Web.Admin.Models.SetRedirectUrlModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}
<form asp-controller="Redirects" asp-action="SetRedirectUrl" asp-route-id="@Model.Id">
    @Html.ReturnToReferrer()
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Admin Set Redirect Url", "Set Redirect Url")
            </h5>
            <button type="submit" class="btn btn-primary">
                @await Html.Resource("Admin Set Url", "Set Url")
            </button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control"/>
            </div>
        </div>
    </div>
</form>