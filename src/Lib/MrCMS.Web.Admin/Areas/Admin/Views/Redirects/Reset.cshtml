@model MrCMS.Entities.Documents.Web.UrlHistory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}

<form asp-controller="Redirects" asp-action="Reset" asp-route-id="@Model.Id">
    @Html.ReturnToReferrer()
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Reset")
            </h5>
            <button type="submit" class="btn btn-warning">
                @await Html.Resource("Reset")
            </button>
        </div>
        <div class="modal-body">
            @Html.InfoBlock("Warning", string.Format(await Html.Resource("Redirects - reset", "Are you sure you wish to reset '{0}'?"), Model.UrlSegment), AlertType.warning)
        </div>
    </div>
</form>