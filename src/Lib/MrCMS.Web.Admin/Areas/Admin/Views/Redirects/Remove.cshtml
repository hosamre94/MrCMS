@model MrCMS.Entities.Documents.Web.UrlHistory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}

<form asp-controller="Redirects" asp-action="Remove" asp-route-id="@Model.Id">
    @Html.ReturnToReferrer()
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Remove")
            </h5>
            <button type="submit" class="btn btn-danger">
                <i class="icon ti ti-trash"></i>
                @await Html.Resource("Remove")
            </button>
        </div>
        <div class="modal-body">
            @Html.InfoBlock("Warning", string.Format(await Html.Resource("Redirects - Remove", "Are you sure you wish to remove'{0}'?"), Model.UrlSegment), AlertType.danger)
        </div>
    </div>
</form>
