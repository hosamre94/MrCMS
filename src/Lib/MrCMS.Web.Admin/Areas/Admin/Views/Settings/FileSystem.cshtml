@model MrCMS.Settings.FileSystemSettings
@{ ViewBag.Title = "File System Settings"; }
<form asp-controller="Settings" asp-action="FileSystem" method="post" id="edit-settings">

    <admin-header>
        <row>
            <admin-header-title title="@await Html.Resource("admin-file-system-settings", "File System Settings") "/>

            <admin-header-actions>
                <button class="btn btn-primary">
                    <i class="icon ti ti-device-floppy"></i>
                    @await Html.Resource("Save")
                </button>
            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>
            <div class="form-group mb-3 row">
                <label asp-for="StorageType" class="col-3 col-form-label"></label>
                <div class="col">
                    @Html.DropDownListFor(settings => settings.StorageType, Model.StorageTypeOptions, new { @class = "form-select" })
                </div>
            </div>
            <hr/>
            <h5 class="text-muted text-uppercase">Azure Settings</h5>
            <div class="form-group mb-3 row">
                <label asp-for="AzureAccountName" class="col-3 col-form-label"></label>
                <div class="col">
                    <input asp-for="AzureAccountName" type="text" class="form-control"/>
                    <span asp-validation-for="AzureAccountName"></span>
                </div>
            </div>
            <div class="form-group mb-3 row">
                <label asp-for="AzureAccountKey" class="col-3 col-form-label"></label>
                <div class="col">
                    <input asp-for="AzureAccountKey" type="text" class="form-control"/>
                    <span asp-validation-for="AzureAccountKey"></span>
                </div>
            </div>
            <div class="form-group mb-3 row">
                <label asp-for="AzureContainerName" class="col-3 col-form-label"></label>
                <div class="col">
                    <input asp-for="AzureContainerName" type="text" class="form-control"/>
                    <span asp-validation-for="AzureContainerName"></span>
                </div>
            </div>
            <div class="form-group mb-3 row">
                <label asp-for="AzureCdnDomain" class="col-3 col-form-label"></label>
                <div class="col">
                    <input asp-for="AzureCdnDomain" type="text" class="form-control"/>
                    <span asp-validation-for="AzureCdnDomain"></span>
                </div>
            </div>
            <div class="from-group mb-3 row">
                <label asp-for="AzureUsingEmulator" class="col-3 col-form-label"></label>
                <div class="col">
                    <label class="form-check form-switch my-2">
                        <input asp-for="AzureUsingEmulator" type="checkbox" class="form-check-input"/>
                    </label>
                </div>
            </div>
            <partial name="FileMigration"/>
        </card-body>
    </card>
</form>

