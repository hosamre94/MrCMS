@model MrCMS.Web.Admin.Models.UpdateFormListOptionModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
<form asp-action="Edit" asp-controller="FormListOption" method="post" class="form-update-form">
    @Html.HiddenFor(m => m.Id)
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Admin Form Add Option Title", "Add option")
            </h5>
            <button type="submit" class="btn btn-primary submit-form-btn">
                <i class="icon ti ti-device-floppy"></i>
                @await Html.Resource("Save")
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group mb-3">
                <label asp-for="Value" class="form-label"></label>
                <input asp-for="Value" class="form-control"/>
                <span asp-validation-for="Value"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="Selected" type="checkbox" class="form-check-input"/>
                    <label asp-for="Selected" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </div>
</form>