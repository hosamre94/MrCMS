@model MrCMS.Settings.SecuritySettings

<form asp-controller="SecurityOptions" asp-action="Settings" method="post">
    <admin-header>
        <row>
            <admin-header-title title="@await Html.Resource("admin-security-config", "Security Configuration") "/>
            <admin-header-actions>
                <button class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i>
                    @await Html.Resource("Save")
                </button>
            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>
            <div class="form-group mb-3">
                @Html.InlineCheckboxFor(x => x.LogLoginAttempts)
            </div>
            <div class="form-group mb-3">
                @Html.InlineCheckboxFor(x => x.SendLoginNotificationEmails)
            </div>
            <div class="form-group">
                @Html.InlineCheckboxFor(x => x.SendScriptChangeNotificationEmails)
            </div>
        </card-body>
    </card>
</form>