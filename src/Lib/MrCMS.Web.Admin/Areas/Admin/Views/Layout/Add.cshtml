@model MrCMS.Web.Admin.Models.AddLayoutModel
@{
    ViewBag.Title = "Add Layout";
}

<form asp-controller="Layout" asp-action="Add" method="post" id="add-layout" class="mt-3">
    <input type="hidden" asp-for="ParentId"/>
    <admin-header>
        <row>
            <admin-header-title title="@await Html.Resource("admin-add-layout", "Add Layout") "/>

            <admin-header-actions>
                <a href="@Url.Action("Index", "Layout")" class="btn btn-dark">
                    <i class="icon ti ti-arrow-back"></i>
                    @await Html.Resource("admin-back", "Back")
                </a>
                <button class="btn btn-primary">
                    <i class="icon ti ti-plus"></i>
                    @await Html.Resource("admin-add", "Add")
                </button>
            </admin-header-actions>
        </row>
    </admin-header>
    <card>
        <card-body>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlSegment" class="form-label"></label>
                <input type="text" asp-for="UrlSegment" class="form-control"/>
                <span asp-validation-for="UrlSegment"></span>
            </div>
        </card-body>
    </card>
</form>