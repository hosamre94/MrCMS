@model MrCMS.Entities.People.User
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@using (Html.BeginForm("SetPassword", "User", new { id = Model.Id }, FormMethod.Post, null, new { style = "display:inline;" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @await Html.Resource("Admin User Reset User Password", "Reset user password")
            </h5>
            <button type="submit" class="btn btn-primary">
                <i class="icon ti ti-device-floppy"></i>
                @await Html.Resource("Save")
            </button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                @Html.Label("Password", new { @class = "form-label" })
                @Html.TextBox("Password", null, new { @class = "form-control" })
            </div>
        </div>
    </div>
}