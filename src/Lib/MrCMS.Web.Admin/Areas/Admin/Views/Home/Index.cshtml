@using MrCMS.Web.Admin.Helpers
@using MrCMS.Web.Admin.Infrastructure.Dashboard
@model MrCMS.Web.Admin.Models.Dashboard
@{
    ViewBag.Title = "Dashboard";
}

<section class="page-header">
    <div class="row mb-2">
        <div class="col">
            <h1>@await Html.Resource("Dashboard")</h1>
        </div>
    </div>
</section>


@await Component.RenderDashboardArea(DashboardArea.Top)

<div class="row">
    <div class="col-md-6">
        @await Component.RenderDashboardArea(DashboardArea.LeftColumn)
    </div>
    <div class="col-md-6">
        @await Component.RenderDashboardArea(DashboardArea.RightColumn)
    </div>
</div>